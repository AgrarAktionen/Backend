{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [

        {
            "type": "node",
            "request": "launch",
            "name": "www",
            "runtimeExecutable": "npm",
            "cwd": "${workspaceFolder}/www",
            "runtimeArgs": [
                "run-script",
                "start"
            ],
            "port": 9229,
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
        {
            "type": "java",
            "name": "Application Server",
            "request": "launch",
            "mainClass": "at.htl.quarkus.demo.Main",
            "projectName": "application-server"
        },
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "express-backend",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "cwd": "${workspaceFolder}/express-server",
            "program": "./dist/main.js",
            "args": [
                "--config", "config/localhost-settings.yaml"
            ],
            "preLaunchTask": "build express-server"
        },
    ]
}